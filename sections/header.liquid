<nav class="header-nav" role="navigation" aria-label="Main">
  <div class="header-nav__inner">
    <div class="header-nav__bar">
      <a href="{{ routes.root_url }}" class="header-nav__logo" aria-label="UKIYO Productions - Home">
        <span class="header-nav__logo-main">{{ section.settings.logo_text | default: 'UKIYO' }}</span>
        {% if section.settings.logo_subtext != blank %}
          <span class="header-nav__logo-sub">{{ section.settings.logo_subtext }}</span>
        {% endif %}
      </a>

      <div class="header-nav__desktop">
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}" class="header-nav__link{% if link.active %} is-active{% endif %}">
            <span class="header-nav__link-text">{{ link.title }}</span>
            <span class="header-nav__underline" aria-hidden="true"></span>
          </a>
        {% endfor %}
      </div>

      <div class="header-nav__desktop header-nav__cta-wrap">
        {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
          <a href="{{ section.settings.cta_link }}" class="header-nav__cta btn btn--primary">
            <span>{{ section.settings.cta_text }}</span>
            <span class="header-nav__cta-icon" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
            </span>
          </a>
        {% endif %}
      </div>

      <button type="button" class="header-nav__menu-btn" aria-label="Open menu" data-drawer-trigger>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M4 12h16"/><path d="M4 18h16"/><path d="M4 6h16"/>
        </svg>
      </button>
    </div>
  </div>
</nav>

<div class="drawer-overlay" data-drawer-overlay aria-hidden="true"></div>
<aside class="drawer" id="drawer" data-drawer role="dialog" aria-label="Menu">
  <button type="button" class="drawer__close" aria-label="Close menu" data-drawer-close>âœ•</button>
  <nav class="drawer__nav">
    <a href="{{ routes.root_url }}">Home</a>
    {% for link in linklists[section.settings.menu].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <a href="{{ section.settings.cta_link }}" class="btn btn--primary" style="margin-top: 1rem;">{{ section.settings.cta_text }}</a>
    {% endif %}
  </nav>
</aside>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "UKIYO"
    },
    {
      "type": "text",
      "id": "logo_subtext",
      "label": "Logo subtext (e.g. PRODUCTIONS)",
      "default": "PRODUCTIONS"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Header CTA text",
      "default": "Start Project"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Header CTA link"
    }
  ]
}
{% endschema %}
