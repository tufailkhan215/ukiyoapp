{% comment %} Source structure and Tailwind classes from reference (ukiyo-prod.com) {% endcomment %}
<footer class="bg-black relative z-50" role="contentinfo">
  {% comment %} CTA section {% endcomment %}
  <section class="relative py-32 lg:py-48 overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/10 to-transparent" aria-hidden="true"></div>
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(255,255,255,0.03),transparent_70%)]"></div>
    </div>
    <div class="relative z-10 max-w-[1400px] mx-auto px-6 lg:px-12 text-center">
      {% if section.settings.cta_strap != blank %}
        <span class="text-[10px] font-medium text-white/40 tracking-[0.3em] uppercase block mb-10">{{ section.settings.cta_strap }}</span>
      {% endif %}
      <h2 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-white leading-[1.05] mb-10">
        {{ section.settings.cta_line1 | default: "Let's create" }}<br>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-gray-400 to-gray-600">{{ section.settings.cta_line2 | default: "something great" }}</span>
      </h2>
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}">
          <button type="button" class="group inline-flex items-center gap-3 px-10 py-5 bg-white text-black rounded-full font-semibold text-lg hover:bg-gray-200 transition-colors" tabindex="0">
            {{ section.settings.cta_text }}
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-right w-5 h-5 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1" aria-hidden="true"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
          </button>
        </a>
      {% endif %}
    </div>
  </section>

  {% comment %} Main footer columns {% endcomment %}
  <div class="border-t border-white/[0.05]">
    <div class="max-w-[1800px] mx-auto px-6 lg:px-12 py-16 lg:py-24">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
        {% comment %} Column 1: Brand {% endcomment %}
        <div class="lg:col-span-1">
          <a class="inline-block mb-8" href="{{ routes.root_url }}">
            <span class="text-3xl font-bold text-white tracking-tighter">{{ section.settings.logo_text | default: 'UKIYO' }}</span>
            {% if section.settings.logo_subtext != blank %}
              <span class="block text-[10px] text-white/30 tracking-[0.4em] mt-1">{{ section.settings.logo_subtext }}</span>
            {% endif %}
          </a>
          {% if section.settings.footer_description != blank %}
            <p class="text-white/40 text-sm leading-relaxed mb-8 max-w-xs">{{ section.settings.footer_description }}</p>
          {% endif %}
          <div class="flex items-center gap-3">
            {% if section.settings.social_instagram != blank %}
              <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white/[0.05] border border-white/10 flex items-center justify-center text-white/40 hover:text-white hover:bg-white/10 transition-all" aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram w-4 h-4" aria-hidden="true"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
              </a>
            {% endif %}
            {% if section.settings.social_linkedin != blank %}
              <a href="{{ section.settings.social_linkedin }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white/[0.05] border border-white/10 flex items-center justify-center text-white/40 hover:text-white hover:bg-white/10 transition-all" aria-label="LinkedIn">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin w-4 h-4" aria-hidden="true"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
              </a>
            {% endif %}
            {% if section.settings.social_twitter != blank %}
              <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white/[0.05] border border-white/10 flex items-center justify-center text-white/40 hover:text-white hover:bg-white/10 transition-all" aria-label="Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-twitter w-4 h-4" aria-hidden="true"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>
              </a>
            {% endif %}
            {% if section.settings.social_youtube != blank %}
              <a href="{{ section.settings.social_youtube }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-white/[0.05] border border-white/10 flex items-center justify-center text-white/40 hover:text-white hover:bg-white/10 transition-all" aria-label="YouTube">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-youtube w-4 h-4" aria-hidden="true"><path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"/><path d="m10 15 5-3-5-3z"/></svg>
              </a>
            {% endif %}
          </div>
        </div>

        {% comment %} Columns 2–4: Menu blocks {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'menu' %}
            <div {{ block.shopify_attributes }}>
              <h4 class="text-[10px] text-white/40 font-medium tracking-[0.3em] uppercase mb-6">{{ block.settings.heading | default: 'Links' }}</h4>
              {% if block.settings.menu != blank %}
                <ul class="space-y-4">
                  {% for link in linklists[block.settings.menu].links %}
                    <li><a class="text-white/50 hover:text-white text-sm transition-colors" href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                </ul>
              {% endif %}
              {% if forloop.last %}
                {% if section.settings.contact_email != blank or section.settings.contact_address != blank %}
                  <h4 class="text-[10px] text-white/40 font-medium tracking-[0.3em] uppercase mb-4 mt-8">Contact</h4>
                  <ul class="space-y-3">
                    {% if section.settings.contact_email != blank %}
                      <li>
                        <a href="mailto:{{ section.settings.contact_email }}" class="text-white/50 hover:text-white text-sm transition-colors inline-flex items-center gap-2">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail w-4 h-4" aria-hidden="true"><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"/><rect x="2" y="4" width="20" height="16" rx="2"/></svg>
                          {{ section.settings.contact_email }}
                        </a>
                      </li>
                    {% endif %}
                    {% if section.settings.contact_address != blank %}
                      <li class="text-white/40 text-sm flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin w-4 h-4" aria-hidden="true"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/></svg>
                        {{ section.settings.contact_address }}
                      </li>
                    {% endif %}
                  </ul>
                {% endif %}
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  {% comment %} Bottom bar {% endcomment %}
  <div class="border-t border-white/[0.05]">
    <div class="max-w-[1800px] mx-auto px-6 lg:px-12 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-white/30 text-sm">{{ section.settings.copyright | default: '© 2026 Ukiyo Productions. All rights reserved.' }}</p>
        <div class="flex items-center gap-8">
          {% if section.settings.privacy_link != blank %}
            <a class="text-white/30 hover:text-white text-sm transition-colors" href="{{ section.settings.privacy_link }}">Privacy Policy</a>
          {% endif %}
          {% if section.settings.terms_link != blank %}
            <a class="text-white/30 hover:text-white text-sm transition-colors" href="{{ section.settings.terms_link }}">Terms of Service</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "section-footer",
  "settings": [
    { "type": "header", "content": "CTA section" },
    { "type": "text", "id": "cta_strap", "label": "CTA strap line", "default": "(Ready to Rally Around Your Big Idea?)" },
    { "type": "text", "id": "cta_line1", "label": "CTA headline line 1", "default": "Let's create" },
    { "type": "text", "id": "cta_line2", "label": "CTA headline line 2 (gradient)", "default": "something great" },
    { "type": "text", "id": "cta_text", "label": "CTA button text", "default": "Book a Discovery Call" },
    { "type": "url", "id": "cta_link", "label": "CTA button link" },
    { "type": "header", "content": "Brand" },
    { "type": "text", "id": "logo_text", "label": "Logo text", "default": "UKIYO" },
    { "type": "text", "id": "logo_subtext", "label": "Logo subtext", "default": "PRODUCTIONS" },
    { "type": "textarea", "id": "footer_description", "label": "Footer description", "default": "Creative branding & content activation for better engagement. We create exceptional brand experiences." },
    { "type": "header", "content": "Social links" },
    { "type": "url", "id": "social_instagram", "label": "Instagram URL" },
    { "type": "url", "id": "social_linkedin", "label": "LinkedIn URL" },
    { "type": "url", "id": "social_twitter", "label": "Twitter URL" },
    { "type": "url", "id": "social_youtube", "label": "YouTube URL" },
    { "type": "header", "content": "Contact (4th column)" },
    { "type": "text", "id": "contact_email", "label": "Contact email", "default": "hello.ukiyoprod@gmail.com" },
    { "type": "text", "id": "contact_address", "label": "Contact address", "default": "Los Angeles, CA" },
    { "type": "header", "content": "Bottom bar" },
    { "type": "text", "id": "copyright", "label": "Copyright text", "default": "© 2026 Ukiyo Productions. All rights reserved." },
    { "type": "url", "id": "privacy_link", "label": "Privacy Policy link" },
    { "type": "url", "id": "terms_link", "label": "Terms of Service link" }
  ],
  "blocks": [
    { "type": "menu", "name": "Menu column", "settings": [
      { "type": "text", "id": "heading", "label": "Column heading", "default": "Services" },
      { "type": "link_list", "id": "menu", "label": "Menu" }
    ]}
  ],
  "max_blocks": 4,
  "presets": [
    { "name": "Footer", "blocks": [
      { "type": "menu", "settings": { "heading": "Services" } },
      { "type": "menu", "settings": { "heading": "Company" } },
      { "type": "menu", "settings": { "heading": "Shop" } }
    ]}
  ]
}
{% endschema %}
