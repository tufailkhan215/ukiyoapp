<footer class="ukiyo-footer" role="contentinfo">
  <div class="ukiyo-footer__inner">
    <div class="ukiyo-footer__col">
      <a href="{{ routes.root_url }}" class="ukiyo-header__logo" style="display: inline-block; margin-bottom: 1rem;">{{ section.settings.logo_text | default: 'UKIYO' }}</a>
      {% if section.settings.contact_email != blank %}
        <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
      {% endif %}
    </div>
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'menu' %}
          <div class="ukiyo-footer__col" {{ block.shopify_attributes }}>
            <h4>{{ block.settings.heading | default: 'Links' }}</h4>
            <ul>
              {% for link in linklists[block.settings.menu].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
  <div class="ukiyo-footer__bottom">
    {{ section.settings.copyright | default: '© 2026 Ukiyo Productions. All rights reserved.' }}
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "UKIYO"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact email"
    },
    {
      "type": "html",
      "id": "copyright",
      "label": "Copyright",
      "default": "© 2026 Ukiyo Productions. All rights reserved."
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "menu", "settings": { "heading": "Services" } },
        { "type": "menu", "settings": { "heading": "Company" } },
        { "type": "menu", "settings": { "heading": "Shop" } }
      ]
    }
  ]
}
{% endschema %}
