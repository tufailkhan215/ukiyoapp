<section class="stats section-container" data-reveal>
  <h2 class="trusted-by__title">{{ section.settings.heading | default: 'Numbers that matter' }}</h2>
  <div class="stats__grid">
    {% for block in section.blocks %}
      {% if block.type == 'stat' %}
        <div class="stats__item glass-card" {{ block.shopify_attributes }}>
          <span class="stats__value">{{ block.settings.value | default: '0' }}</span>
          <h3 class="stats__label">{{ block.settings.label | default: 'Stat' }}</h3>
          <p class="stats__description">{{ block.settings.description }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Stats",
  "tag": "section",
  "class": "section-stats",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Numbers that matter"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        { "type": "text", "id": "value", "label": "Value (e.g. $2.4M)" },
        { "type": "text", "id": "label", "label": "Label" },
        { "type": "textarea", "id": "description", "label": "Description" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stats",
      "blocks": [
        { "type": "stat", "settings": { "value": "$2.4M+", "label": "Revenue Generated", "description": "For clients through strategic campaigns" } },
        { "type": "stat", "settings": { "value": "500+", "label": "Projects Delivered", "description": "Successful campaigns" } },
        { "type": "stat", "settings": { "value": "98%", "label": "Client Satisfaction", "description": "Long-term partnerships" } },
        { "type": "stat", "settings": { "value": "<24hrs", "label": "Response Time", "description": "Fast turnaround" } }
      ]
    }
  ]
}
{% endschema %}
