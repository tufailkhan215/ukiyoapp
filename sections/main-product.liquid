<section class="section-container" data-reveal>
  <div class="product-page" style="display: grid; grid-template-columns: 1fr; gap: 2rem; max-width: 1200px; margin: 0 auto;">
    {% if product.featured_image %}
      <div class="product-page__media" style="aspect-ratio: 1; background: #232323; border-radius: 0.5rem; overflow: hidden;">
        <img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.featured_image.alt | escape }}" width="800" height="800" style="width: 100%; height: 100%; object-fit: cover;">
      </div>
    {% endif %}
    <div class="product-page__info">
      <h1 class="trusted-by__title" style="margin-bottom: 0.5rem;">{{ product.title }}</h1>
      <p style="font-size: 1.25rem; color: #999; margin-bottom: 1rem;">{{ product.price | money }}</p>
      <div class="product-page__description" style="color: #b0b0b0; margin-bottom: 1.5rem;">
        {{ product.description }}
      </div>
      <form action="{{ routes.cart_add_url }}" method="post">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" name="add" class="btn btn--primary">Add to cart</button>
      </form>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product",
  "tag": "section",
  "class": "section-main-product",
  "settings": [],
  "presets": [
    { "name": "Product" }
  ]
}
{% endschema %}
