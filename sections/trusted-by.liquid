<section class="trusted-by section-container" data-reveal>
  <h2 class="trusted-by__title">
    {{ section.settings.title_before | default: 'Brands That Trust' }} <span>{{ section.settings.title_after | default: 'Us' }}</span>
  </h2>
  <p class="trusted-by__subtitle">{{ section.settings.subtitle | default: "We've partnered with some of the most recognizable brands in the world." }}</p>
  <div class="trusted-by__grid">
    {% for block in section.blocks %}
      {% if block.type == 'brand' %}
        <div class="trusted-by__card glass-card" {{ block.shopify_attributes }}>
          <span>{{ block.settings.name | default: 'Brand' }}</span>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Trusted by",
  "tag": "section",
  "class": "section-trusted-by",
  "settings": [
    {
      "type": "text",
      "id": "title_before",
      "label": "Title (before highlight)",
      "default": "Brands That Trust"
    },
    {
      "type": "text",
      "id": "title_after",
      "label": "Title (highlighted part)",
      "default": "Us"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We've partnered with some of the most recognizable brands in the world."
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Brand name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trusted by",
      "blocks": [
        { "type": "brand", "settings": { "name": "NIKE" } },
        { "type": "brand", "settings": { "name": "SPOTIFY" } },
        { "type": "brand", "settings": { "name": "APPLE" } },
        { "type": "brand", "settings": { "name": "ADIDAS" } },
        { "type": "brand", "settings": { "name": "WANDRD" } },
        { "type": "brand", "settings": { "name": "COACHELLA" } }
      ]
    }
  ]
}
{% endschema %}
