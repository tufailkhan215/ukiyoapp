<section class="testimonials section-container" data-reveal>
  <h2 class="trusted-by__title">{{ section.settings.heading | default: 'Client praise' }}</h2>
  <div class="testimonials__grid">
    {% for block in section.blocks %}
      {% if block.type == 'testimonial' %}
        <blockquote class="testimonials__card glass-card" {{ block.shopify_attributes }}>
          <p class="testimonials__quote">"{{ block.settings.quote }}"</p>
          <footer class="testimonials__author">
            {% if block.settings.avatar != blank %}
              <img class="testimonials__avatar" src="{{ block.settings.avatar | image_url: width: 80 }}" alt="" width="80" height="80" loading="lazy">
            {% endif %}
            <div>
              <strong class="testimonials__name">{{ block.settings.author_name }}</strong>
              <span class="testimonials__role">{{ block.settings.author_role }}</span>
            </div>
          </footer>
        </blockquote>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section-testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Client praise"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        { "type": "textarea", "id": "quote", "label": "Quote" },
        { "type": "text", "id": "author_name", "label": "Author name" },
        { "type": "text", "id": "author_role", "label": "Author role / company" },
        { "type": "image_picker", "id": "avatar", "label": "Avatar (optional)" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        { "type": "testimonial", "settings": { "quote": "We went from chaos to clarity. Now I actually have time for hobbies.", "author_name": "Sarah Chen", "author_role": "CEO, TechVenture AI" } }
      ]
    }
  ]
}
{% endschema %}
