<section class="section-container" data-reveal>
  <h1 class="trusted-by__title" style="margin-bottom: 2rem;">Cart</h1>
  {% if cart.item_count > 0 %}
    <form action="{{ routes.cart_url }}" method="post">
      <ul style="list-style: none; padding: 0; margin: 0 0 2rem;">
        {% for item in cart.items %}
          <li class="glass-card" style="padding: 1rem; margin-bottom: 1rem; display: flex; gap: 1rem; align-items: center;">
            {% if item.image %}
              <img src="{{ item.image | image_url: width: 80 }}" alt="{{ item.title }}" width="80" height="80" style="border-radius: 0.25rem;">
            {% endif %}
            <div style="flex: 1;">
              <a href="{{ item.url }}" style="color: #fff; text-decoration: none; font-weight: 600;">{{ item.product.title }}</a>
              <p style="color: #999; margin: 0; font-size: 0.875rem;">{{ item.final_line_price | money }} Ã— {{ item.quantity }}</p>
            </div>
            <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" style="width: 4rem; background: #232323; border: 1px solid rgba(255,255,255,0.15); color: #fff; padding: 0.5rem; border-radius: 0.25rem;">
          </li>
        {% endfor %}
      </ul>
      <p style="font-size: 1.25rem; margin-bottom: 1rem;">Total: {{ cart.total_price | money }}</p>
      <button type="submit" name="update" class="btn btn--secondary" style="margin-right: 0.5rem;">Update cart</button>
      <button type="submit" name="checkout" class="btn btn--primary">Checkout</button>
    </form>
  {% else %}
    <p class="hero__description">Your cart is empty.</p>
    <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">Continue shopping</a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Cart",
  "tag": "section",
  "class": "section-main-cart",
  "settings": [],
  "presets": [
    { "name": "Cart" }
  ]
}
{% endschema %}
